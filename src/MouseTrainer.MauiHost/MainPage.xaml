<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="MouseTrainer.MauiHost.MainPage"
             Title="Mouse Trainer (Deterministic Host)">
    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="16" RowSpacing="12">
        <Label Text="Deterministic Host Shell"
               FontSize="22"
               FontAttributes="Bold" />

        <VerticalStackLayout Grid.Row="1" Spacing="6">
            <Label Text="This app intentionally contains ONLY the deterministic foundation layer (fixed-step loop + event-driven audio cueing + asset verification)."
                   FontSize="13" />
            <Label Text="It verifies that all required audio assets are present in the app package at startup to prevent 'silent audio missing from MSIX' failures."
                   FontSize="13" />
        </VerticalStackLayout>

        <ScrollView Grid.Row="2">
            <Label x:Name="LogLabel" FontFamily="Consolas" FontSize="12" LineBreakMode="WordWrap" />
        </ScrollView>

        <HorizontalStackLayout Grid.Row="3" Spacing="12">
            <Button x:Name="StartButton" Text="Start Loop" Clicked="OnStartClicked" />
            <Button x:Name="StopButton" Text="Stop Loop" Clicked="OnStopClicked" IsEnabled="False" />
            <Button Text="Clear Log" Clicked="OnClearClicked" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
